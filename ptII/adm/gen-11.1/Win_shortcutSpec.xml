<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?>

<!-- Used by izPack to create Windows Menu Shortcuts.  See ptIIX_Y_setup_windows.xml -->
<izpack:shortcuts
    version="5.0"
    xmlns:izpack="http://izpack.org/schema/shortcuts"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://izpack.org/schema/shortcuts http://izpack.org/schema/5.0/izpack-shortcuts-5.0.xsd">

  <skipIfNotSupported/>

  <programGroup defaultName="Ptolemy\ptII11.1.devel"
                location="applications"/>

  <shortcut
    name="Vergil -capecode"
    programGroup="yes"
    desktop="no"
    applications="no"
    startMenu="no"
    startup="no"
    target="$INSTALL_PATH\capecode.exe"
    commandLine=""
    workingDirectory="$INSTALL_PATH"
    description="CapeCode 1.0.devel, the subset of Ptolemy II GUI"
    iconFile="$INSTALL_PATH\doc\img\capecode.ico"
    iconIndex="0"
    initialState="normal">

    <createForPack name="CapeCode"/>
  </shortcut>
  
  <shortcut
    name="Vergil -ptiny"
    programGroup="yes"
    desktop="no"
    applications="no"
    startMenu="no"
    startup="no"
    target="$INSTALL_PATH\ptiny.exe"
    commandLine=""
    workingDirectory="$INSTALL_PATH"
    description="Ptiny 11.1.devel, the subset of Ptolemy II GUI"
    iconFile="$INSTALL_PATH\doc\img\ptiny.ico"
    iconIndex="0"
    initialState="normal">

    <createForPack name="Ptiny"/>
  </shortcut>

   <shortcut
     name="Ptolemy II $APP_VER Uninstaller"
     programGroup="yes"
     desktop="no"
     applications="no"
     startMenu="no"
     startup="no"
     workingDirectory="$INSTALL_PATH"
     target="$INSTALL_PATH\Uninstaller\uninstaller.jar"     
     commandLine=""
     iconFile="%SystemRoot%\system32\SHELL32.dll"
     iconIndex="31" 
     description="This uninstalls Ptolemy II 11.1.devel">
     
     <createForPack name="Ptiny" />
   </shortcut>

  <shortcut
    name="Vergil"
    programGroup="yes"
    desktop="no"
    applications="no"
    startMenu="no"
    startup="no"
    target="$INSTALL_PATH\vergil.exe"
    commandLine=""
    workingDirectory="$INSTALL_PATH"
    description="Vergil 11.1.devel, the full Ptolemy II GUI"
    iconFile="$INSTALL_PATH\doc\img\vergil.ico"
    iconIndex="0"
    initialState="normal">

    <createForPack name="Full"/>
  </shortcut>

  <shortcut
    name="HyVisual"
    programGroup="yes"
    desktop="no"
    applications="no"
    startMenu="no"
